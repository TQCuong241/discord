{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "puppeteer"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules"]
}
